{
  "openapi": "3.0.0",
  "info": {
    "title": "RCAP API - Documentation & Help System",
    "version": "1.0.0",
    "description": "API endpoints for help articles, onboarding, and API documentation"
  },
  "servers": [
    {
      "url": "http://localhost:8000/api/v1",
      "description": "Development server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "HelpArticle": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "slug": { "type": "string" },
          "content": { "type": "string", "description": "Markdown content" },
          "excerpt": { "type": "string", "nullable": true },
          "category": { "type": "string", "enum": ["getting-started", "activities", "dashboard", "communication", "admin"] },
          "role_access": {
            "type": "array",
            "items": { "type": "string" },
            "nullable": true,
            "description": "null = all roles"
          },
          "order": { "type": "integer" },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        }
      },
      "OnboardingStep": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "order": { "type": "integer" },
          "role": { "type": "string", "enum": ["super_admin", "admin", "sub_admin", "user", "all"] },
          "target_element": { "type": "string", "nullable": true, "description": "CSS selector" },
          "content": { "type": "string", "nullable": true },
          "is_active": { "type": "boolean" }
        }
      },
      "OnboardingProgress": {
        "type": "object",
        "properties": {
          "completed_steps": {
            "type": "array",
            "items": { "type": "integer" }
          },
          "skipped_steps": {
            "type": "array",
            "items": { "type": "integer" }
          },
          "total_steps": { "type": "integer" },
          "progress_percentage": { "type": "number" }
        }
      },
      "HelpCategory": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "count": { "type": "integer" }
        }
      }
    }
  },
  "paths": {
    "/help/articles": {
      "get": {
        "tags": ["Help"],
        "summary": "List help articles",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "category", "in": "query", "schema": { "type": "string" } },
          { "name": "role", "in": "query", "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "Help articles list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/HelpArticle" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/help/articles/{id}": {
      "get": {
        "tags": ["Help"],
        "summary": "Get help article",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "Help article",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": { "$ref": "#/components/schemas/HelpArticle" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/help/search": {
      "get": {
        "tags": ["Help"],
        "summary": "Search help articles",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "q", "in": "query", "required": true, "schema": { "type": "string" } },
          { "name": "category", "in": "query", "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "Search results",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/HelpArticle" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/help/categories": {
      "get": {
        "tags": ["Help"],
        "summary": "List help categories",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Categories list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/HelpCategory" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/onboarding/steps": {
      "get": {
        "tags": ["Onboarding"],
        "summary": "Get onboarding steps (role-filtered)",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Onboarding steps",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/OnboardingStep" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/onboarding/steps/{id}/complete": {
      "put": {
        "tags": ["Onboarding"],
        "summary": "Mark step as complete",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "skipped": { "type": "boolean", "default": false }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Step marked as complete"
          }
        }
      }
    },
    "/onboarding/progress": {
      "get": {
        "tags": ["Onboarding"],
        "summary": "Get user onboarding progress",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Onboarding progress",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": { "$ref": "#/components/schemas/OnboardingProgress" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/onboarding/reset": {
      "post": {
        "tags": ["Onboarding"],
        "summary": "Reset onboarding progress",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Progress reset"
          }
        }
      }
    },
    "/docs/api": {
      "get": {
        "tags": ["Documentation"],
        "summary": "Get OpenAPI specification",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "OpenAPI spec",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    }
  }
}

