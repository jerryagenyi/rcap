{
  "openapi": "3.0.0",
  "info": {
    "title": "RCAP API - Communication System",
    "version": "1.0.0",
    "description": "API endpoints for internal messaging and notifications"
  },
  "servers": [
    {
      "url": "http://localhost:8000/api/v1",
      "description": "Development server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Message": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "subject": { "type": "string" },
          "body": { "type": "string" },
          "is_urgent": { "type": "boolean" },
          "sender": {
            "type": "object",
            "properties": {
              "id": { "type": "integer" },
              "name": { "type": "string" },
              "email": { "type": "string" }
            }
          },
          "recipients": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "user_id": { "type": "integer" },
                "user_name": { "type": "string" },
                "read_at": { "type": "string", "format": "date-time", "nullable": true }
              }
            }
          },
          "parent_message_id": { "type": "integer", "nullable": true },
          "created_at": { "type": "string", "format": "date-time" }
        }
      },
      "MessageRequest": {
        "type": "object",
        "required": ["subject", "body"],
        "properties": {
          "recipient_id": { "type": "integer", "nullable": true },
          "organisation_id": { "type": "integer", "nullable": true },
          "role": { "type": "string", "enum": ["admin", "sub_admin", "user"], "nullable": true },
          "subject": { "type": "string", "maxLength": 255 },
          "body": { "type": "string", "maxLength": 10000 },
          "is_urgent": { "type": "boolean", "default": false },
          "parent_message_id": { "type": "integer", "nullable": true }
        }
      },
      "Notification": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "type": { "type": "string", "enum": ["message", "activity", "system", "urgent"] },
          "title": { "type": "string" },
          "body": { "type": "string" },
          "link": { "type": "string", "nullable": true },
          "read_at": { "type": "string", "format": "date-time", "nullable": true },
          "created_at": { "type": "string", "format": "date-time" }
        }
      },
      "NotificationPreferences": {
        "type": "object",
        "properties": {
          "email_enabled": { "type": "boolean" },
          "in_app_enabled": { "type": "boolean" },
          "message_email": { "type": "boolean" },
          "message_in_app": { "type": "boolean" },
          "activity_email": { "type": "boolean" },
          "activity_in_app": { "type": "boolean" },
          "urgent_email": { "type": "boolean" },
          "urgent_in_app": { "type": "boolean" }
        }
      },
      "UnreadCount": {
        "type": "object",
        "properties": {
          "count": { "type": "integer" }
        }
      }
    }
  },
  "paths": {
    "/messages": {
      "get": {
        "tags": ["Messages"],
        "summary": "List messages (inbox)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "page", "in": "query", "schema": { "type": "integer", "default": 1 } },
          { "name": "unread_only", "in": "query", "schema": { "type": "boolean" } }
        ],
        "responses": {
          "200": {
            "description": "Messages list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Message" }
                    },
                    "meta": { "$ref": "#/components/schemas/PaginationMeta" }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Messages"],
        "summary": "Send message",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/MessageRequest" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Message sent",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": { "$ref": "#/components/schemas/Message" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/messages/{id}": {
      "get": {
        "tags": ["Messages"],
        "summary": "Get message details",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "Message details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": { "$ref": "#/components/schemas/Message" }
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Messages"],
        "summary": "Mark message as read",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "Message marked as read"
          }
        }
      },
      "delete": {
        "tags": ["Messages"],
        "summary": "Delete message",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "Message deleted"
          }
        }
      }
    },
    "/messages/{id}/reply": {
      "post": {
        "tags": ["Messages"],
        "summary": "Reply to message",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["body"],
                "properties": {
                  "body": { "type": "string", "maxLength": 10000 }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Reply sent"
          }
        }
      }
    },
    "/notifications": {
      "get": {
        "tags": ["Notifications"],
        "summary": "List notifications",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "limit", "in": "query", "schema": { "type": "integer", "default": 20 } },
          { "name": "unread_only", "in": "query", "schema": { "type": "boolean" } }
        ],
        "responses": {
          "200": {
            "description": "Notifications list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Notification" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/notifications/{id}/read": {
      "put": {
        "tags": ["Notifications"],
        "summary": "Mark notification as read",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "Notification marked as read"
          }
        }
      }
    },
    "/notifications/unread-count": {
      "get": {
        "tags": ["Notifications"],
        "summary": "Get unread count",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Unread count",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": { "$ref": "#/components/schemas/UnreadCount" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/notifications/preferences": {
      "get": {
        "tags": ["Notifications"],
        "summary": "Get notification preferences",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Notification preferences",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": { "$ref": "#/components/schemas/NotificationPreferences" }
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Notifications"],
        "summary": "Update notification preferences",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/NotificationPreferences" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Preferences updated"
          }
        }
      }
    }
  }
}

