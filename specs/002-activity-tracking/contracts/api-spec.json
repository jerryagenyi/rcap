{
  "openapi": "3.0.0",
  "info": {
    "title": "RCAP API - Activity Tracking & Reporting",
    "version": "1.0.0",
    "description": "API endpoints for activity tracking, evidence uploads, and reporting templates"
  },
  "servers": [
    {
      "url": "http://localhost:8000/api/v1",
      "description": "Development server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Activity": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "date": { "type": "string", "format": "date" },
          "location": { "type": "string" },
          "type": { "type": "string", "enum": ["workshop", "campaign", "meeting", "training", "other"] },
          "status": { "type": "string", "enum": ["draft", "submitted", "approved", "rejected"] },
          "organisation": { "$ref": "#/components/schemas/Organisation" },
          "user": { "$ref": "#/components/schemas/User" },
          "template": { "$ref": "#/components/schemas/ReportTemplate", "nullable": true },
          "tags": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Tag" }
          },
          "evidence": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/ActivityEvidence" }
          },
          "submitted_at": { "type": "string", "format": "date-time", "nullable": true },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        }
      },
      "ActivityEvidence": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "file_name": { "type": "string" },
          "file_type": { "type": "string", "enum": ["image", "document", "audio", "video"] },
          "file_size": { "type": "integer" },
          "signed_url": { "type": "string" },
          "created_at": { "type": "string", "format": "date-time" }
        }
      },
      "Tag": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "category": { "type": "string", "enum": ["metric", "theme", "audience", "other"] }
        }
      },
      "ReportTemplate": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "description": { "type": "string", "nullable": true },
          "fields": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "type": { "type": "string", "enum": ["text", "textarea", "number", "date", "select"] },
                "required": { "type": "boolean" },
                "options": { "type": "array", "items": { "type": "string" }, "nullable": true }
              }
            }
          }
        }
      },
      "ActivityRequest": {
        "type": "object",
        "required": ["title", "description", "date", "location", "type"],
        "properties": {
          "title": { "type": "string", "maxLength": 255 },
          "description": { "type": "string", "maxLength": 10000 },
          "date": { "type": "string", "format": "date" },
          "location": { "type": "string", "maxLength": 255 },
          "type": { "type": "string", "enum": ["workshop", "campaign", "meeting", "training", "other"] },
          "template_id": { "type": "integer", "nullable": true },
          "tags": {
            "type": "array",
            "items": { "type": "integer" }
          }
        }
      },
      "TimelineResponse": {
        "type": "object",
        "additionalProperties": {
          "type": "array",
          "items": { "$ref": "#/components/schemas/Activity" }
        }
      },
      "PaginationMeta": {
        "type": "object",
        "properties": {
          "current_page": { "type": "integer" },
          "last_page": { "type": "integer" },
          "per_page": { "type": "integer" },
          "total": { "type": "integer" }
        }
      }
    }
  },
  "paths": {
    "/activities": {
      "get": {
        "tags": ["Activities"],
        "summary": "List activities",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "page", "in": "query", "schema": { "type": "integer", "default": 1 } },
          { "name": "status", "in": "query", "schema": { "type": "string", "enum": ["draft", "submitted", "approved", "rejected"] } },
          { "name": "type", "in": "query", "schema": { "type": "string" } },
          { "name": "organisation_id", "in": "query", "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "Activities list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Activity" }
                    },
                    "meta": { "$ref": "#/components/schemas/PaginationMeta" }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Activities"],
        "summary": "Create activity",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ActivityRequest" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Activity created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": { "$ref": "#/components/schemas/Activity" }
                  }
                }
              }
            }
          },
          "422": {
            "description": "Validation error"
          }
        }
      }
    },
    "/activities/{id}": {
      "get": {
        "tags": ["Activities"],
        "summary": "Get activity details",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "Activity details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": { "$ref": "#/components/schemas/Activity" }
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Activities"],
        "summary": "Update activity (draft only)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ActivityRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Activity updated"
          },
          "403": {
            "description": "Cannot edit submitted activity"
          }
        }
      },
      "delete": {
        "tags": ["Activities"],
        "summary": "Delete activity (draft only)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "Activity deleted"
          },
          "403": {
            "description": "Cannot delete submitted activity"
          }
        }
      }
    },
    "/activities/{id}/submit": {
      "post": {
        "tags": ["Activities"],
        "summary": "Submit activity",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "Activity submitted"
          }
        }
      }
    },
    "/activities/{id}/evidence": {
      "post": {
        "tags": ["Activities"],
        "summary": "Upload evidence file",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "File uploaded",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": { "$ref": "#/components/schemas/ActivityEvidence" }
                  }
                }
              }
            }
          },
          "422": {
            "description": "File validation error"
          }
        }
      }
    },
    "/activities/timeline": {
      "get": {
        "tags": ["Activities"],
        "summary": "Get timeline data",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "start_date", "in": "query", "schema": { "type": "string", "format": "date" } },
          { "name": "end_date", "in": "query", "schema": { "type": "string", "format": "date" } },
          { "name": "organisation_id", "in": "query", "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "Timeline data",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/TimelineResponse" }
              }
            }
          }
        }
      }
    },
    "/templates": {
      "get": {
        "tags": ["Templates"],
        "summary": "List templates",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Templates list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/ReportTemplate" }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Templates"],
        "summary": "Create template (admin only)",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "fields"],
                "properties": {
                  "name": { "type": "string" },
                  "description": { "type": "string" },
                  "organisation_id": { "type": "integer", "nullable": true },
                  "fields": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": { "type": "string" },
                        "type": { "type": "string" },
                        "required": { "type": "boolean" },
                        "options": { "type": "array", "items": { "type": "string" } }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Template created"
          }
        }
      }
    }
  }
}

